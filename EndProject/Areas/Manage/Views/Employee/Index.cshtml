
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Employee>
<div class="content-wrapper">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employees </h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image</th>
                                <th>FullName</th>
                                <th>Position</th>
                                <th>PhoneNumber</th>
                                <th>About</th>
                                <th>Description</th>
                                <th>Mail</th>
                                <th>Facebook Link</th>
                                <th>Instagram Link</th>
                                <th>Twitter Link</th>
                                <th>Youtube Link</th>
                                <th colspan="2">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td class="py-1">
                                        <img width="40" src="~/assets/images/@item.ImageUrl" alt="image" />
                                    </td>
                                    <td>@item.Name @item.Surname</td>
                                    <td>@item.Position.Name</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.About</td>
                                    <td>@item.Description</td>
                                    <td>@item.Mail</td>
                                    <td>@item.FacebookLink</td>
                                    <td>@item.InstagramLink</td>
                                    <td>@item.TwitterLink</td>
                                    <td>@item.YoutubeLink</td>

                                    <td><a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Employee" class="btn btn-danger">Delete</a></td>
                                    <td><a asp-action="Update" asp-route-id="@item.Id" asp-controller="Employee" class="btn btn-success">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

