
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Setting>
<div class="card-body">
    <h4 class="card-title">Setting</h4>
    <p class="card-description">
   @*     Add class <code>.table</code>*@
    </p>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>

                    <th>Key</th>
                    <th>Value</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Key</td>
                        <td>@item.Value</td>

                        <td><label class="badge badge-danger">Pending</label></td>
                        <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Setting" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    </tr>

                }
            </tbody>
            <nav aria-label="...">
                <ul class="pagination pagination-sm">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)" tabindex="-1">Previous</a>
                        </li>
                    }
                    @for (int i = 1; i <= ViewBag.MaxPageCount; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage==i?"disabled":"")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" tabindex="-1">@i</a>
                        </li>
                    }
                    @if (ViewBag.CurrentPage < ViewBag.MaxPageCount)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)" tabindex="-1">Next</a>
                        </li>
                    }

                </ul>
            </nav>
        </table>
    </div>
</div>


