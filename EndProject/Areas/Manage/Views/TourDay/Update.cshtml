
@{
    ViewData["Title"] = "Update";
}
@model UpdateTourDayVM
<div class="content-wrapper">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">  Edit Tour Day </h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" id="exampleInputName1" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div><div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrimaryImage">PrimaryImage</label>
                        <input accept="image/*" asp-for="PrimaryImage" class="form-control" placeholder="PrimaryImage">
                        <span asp-validation-for="PrimaryImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OtherImages">OtherImages</label>
                        <input accept="image/*" asp-for="OtherImages" class="form-control" placeholder="OtherImages">
                        <span asp-validation-for="OtherImages" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HotelId">Hotel</label>
                        <select asp-for="HotelId" asp-items="@ViewBag.Hotels">
                            <option selected disabled> Select a Hotel</option>
                        </select>
                        <span asp-validation-for="HotelId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TourId">Tour</label>
                        <select asp-for="TourId" asp-items="@ViewBag.Tours">
                            <option selected disabled> Select a Tour</option>
                        </select>
                        <span asp-validation-for="TourId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" asp-controller="TourDay" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

