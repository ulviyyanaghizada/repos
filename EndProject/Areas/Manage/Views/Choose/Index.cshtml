
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Choose>
<div class="content-wrapper">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Choose </h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image</th>
                                <th>Description</th>
                                <th>Title</th>
                                <th colspan="2">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td class="py-1">
                                        <img src="~/assets/images/resource/@item.ImageUrl" alt="image" />
                                    </td>
                                    <td>@item.Description</td>
                                    <td>@item.Title</td>

                                    <td><a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Choose" class="btn btn-danger">Delete</a></td>
                                    <td><a asp-action="Update" asp-route-id="@item.Id" asp-controller="Choose" class="btn btn-success">Update</a></td>
                                </tr>

                            }
                        </tbody>
                        <nav aria-label="...">
                            <ul class="pagination pagination-sm">
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)" tabindex="-1">Previous</a>
                                    </li>
                                }
                                @for (int i = 1; i <= ViewBag.MaxPageCount; i++)
                                {
                                    <li class="page-item @(ViewBag.CurrentPage==i?"disabled":"")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i" tabindex="-1">@i</a>
                                    </li>
                                }
                                @if (ViewBag.CurrentPage < ViewBag.MaxPageCount)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)" tabindex="-1">Next</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

