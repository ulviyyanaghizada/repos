
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Room>
<div class="container">
	<div class="card mt-5">
		<div class="table-responsive">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Price</th>
						<th colspan="2">Operation</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var b in Model)
					{
						<tr>
							<td>@b.Id</td>
							<td>@b.Name</td>
							<td>@b.Price</td>
							<td><a class="btn btn-danger" asp-area="Manage" asp-controller="Room" asp-action="Delete" asp-route-id="@b.Id">Delete</a></td>
							<td><a class="btn btn-info" asp-area="Manage" asp-controller="Room" asp-action="Update" asp-route-id="@b.Id">Update</a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


