
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<TrekkingDay>
<div class="content-wrapper">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Trekking Day </h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Description</th>
                                <th>Trekking</th>
                                <th colspan="2">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Description</td>
                                    <td>@item.Trekking.Name</td>
                                    <td><a asp-action="Delete" asp-route-id="@item.Id" asp-controller="TrekkingDay" class="btn btn-danger">Delete</a></td>
                                    <td><a asp-action="Update" asp-route-id="@item.Id" asp-controller="TrekkingDay" class="btn btn-success">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




