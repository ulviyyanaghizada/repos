									@Model.GroupSize Person
								</div>
							</div>

						</div>
					</div>
					<!-- End Package Info Box -->

					<!-- Rating Box -->
					<div class="rating-box">
						<div class="clearfix">
							<div class="pull-left">
								<div class="rating">
									(5 review) &nbsp;
									<span class="fa fa-star"></span>
									<span class="fa fa-star"></span>
									<span class="fa fa-star"></span>
									<span class="fa fa-star"></span>
									<span class="fa fa-star"></span>
								</div>
							</div>
							<div class="pull-right">
								<ul class="post-info">
									<li><span class="icon"><img src="~/assets/images/icons/share-icon.svg" alt="" /></span>Share</li>
									<li><span class="icon "><img src="~/assets/images/icons/review-icon.svg" alt="" /></span>Review</li>
									<li><span class="icon "><img src="~/assets/images/icons/heart-icon-1.svg" alt="" /></span>Wishlist</li>
								</ul>
							</div>
						</div>
					</div>
					<!-- Rating Box -->

					<h5>About @Model.Name</h5>
					<p>@Model.Description</p>
					<div class="feature-box">
						<h5>Features</h5>
						<ul class="feature-list">
						
						@foreach (var feature in Model.TourFeatures?.Where(c => c.TourId == Model.Id))
						{
						<li>@feature.TFeature.Title</li>	
						}
							
						</ul>
					</div>
					<div class="facility-box">
						<h5>Facilities</h5>
						<div class="row clearfix">
							@foreach (var facilitie in Model.TourFacilities?.Where(c => c.TourId == Model.Id))
						{
							
							<div class="column col-lg-3 col-md-4 col-sm-12">
								<!-- Facility Box Two -->
								<div class="facility-box-two">
									<span class="icon">
										<img src="~/assets/images/resource/@facilitie.TFacilitie.IconUrl" alt="" />
									</span>
									@facilitie.TFacilitie.Title
								</div>
							</div>
						}
						
						</div>
					</div>

					<!-- Itinerary Box -->
					<div class="itinerary-box">
						<h5>Itinerary</h5>
						<div class="faq-one style-two">
							<div class="accordion-box clearfix">
								<!--Block-->
								@foreach (var days in Model.TourDays)
							{
								
								<div class="accordion block active-block">
									<div class="acc-btn active">Day 1 <i class="fa-regular fa-angle-down"></i></div>
									<div class="acc-content">
										<div class="content">
											<div class="bold-text">@days.Title</div>
											<div class="text">@days.Description</div>
											<!-- Faq Gallery -->
											<div class="faq-gallery">
												<div class="row clearfix">
													<!-- Image Column -->
													@foreach (var item in days.TourDaysImages)
													{
														
													<div class="image-column col-lg-4 col-md-4 col-sm-12">
														<div class="image">
															<img src="~/assets/images/@item.ImageUrl" alt="" />
														</div>
													</div>
													}
													
												</div>
											</div>
											<!-- End Faq Gallery -->

											<!-- Faq Info Tabs -->
											<div class="faq-info-tabs">
												<!-- Faq Tabs -->
												<div class="faq-tabs tabs-box">

													<!-- Tab Btns -->
													<ul class="tab-btns tab-buttons clearfix">
														<li data-tab="#prod-1" class="tab-btn active-btn">Accomodation</li>
														<li data-tab="#prod-2" class="tab-btn">Meals</li>
														<li data-tab="#prod-3" class="tab-btn">Special Info</li>
													</ul>

													<!-- Tabs Container -->
													<div class="tabs-content">

														<!-- Tab / Active Tab -->
														<div class="tab active-tab" id="prod-1">
															<div class="inner-content">
																<p>@days.Hotel.Description</p>
																<div class="hotel-info">
																	<div class="hotel-image">
																		<img src="~/assets/images/hotel/@days.Hotel.ImageUrl" alt="" />
																	</div>
																	<div class="hotel-name">@days.Hotel.Name</div>
															
																</div>
															</div>
														</div>

														<!-- Tab -->
														<div class="tab" id="prod-2">
															<div class="inner-content">
																<p>Breakfast : @days.Hotel.BreakFast</p>
																<p>Lunch : @days.Hotel.Lunch</p>
																<p>@days.Hotel.Supper</p>

															</div>
														</div>

														<!-- Tab -->
														<div class="tab" id="prod-3">
															<div class="inner-content">
																<div class="hotel-info">
																	@foreach (var room in days.Hotel.HotelRooms)
																	{
																		
																	<ul class="list">
																		<li>
																			<span>@room.Room.Name</span>
																			@room.Room.Price
																		</li>
																	</ul>
																	}
																</div>
															</div>
														</div>

													</div>
												</div>
											</div>

										</div>
									</div>
								</div>
							}
								

							</div>
						</div>
					</div>
					<!-- End Itinerary Box -->

					<!-- Gallery Box -->
					<div class="gallery-box">
						<h5>Gallery</h5>
						<div class="single-item-carousel owl-carousel owl-theme">
							@foreach (var item in Model.TourImages)
						{
							
							<div class="slide">
								<div class="image">
									<img src="~/assets/images/tour/@item.ImageUrl" alt="" />
								</div>
							</div>
