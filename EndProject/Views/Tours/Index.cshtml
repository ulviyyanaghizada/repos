							</div>
						</div>
					</div>

					<!-- Package Info Box -->
					<div class="package-info-box style-two">
						<div class="inner-container d-flex justify-content-between align-items-center">

							<!-- Package Info Block -->
							<div class="package-info-block">
								<div class="inner-box">
									<div class="icon"><img src="~/assets/images/icons/duration.svg" alt="" /></div>
									<strong>Duration</strong>
									@Model.TourDays.Count Days
								</div>
							</div>

							<!-- Package Info Block -->
							<div class="package-info-block">
								<div class="inner-box">
									<div class="icon"><img src="~/assets/images/icons/category-icon.svg" alt="" /></div>
									<strong>Category</strong>
									@foreach (var category in Model.TourCategories.Where(c=>c.TourId==Model.Id))
								{
									@category.TCategory.Name
								}
								</div>
							</div>

							<!-- Package Info Block -->
							<div class="package-info-block">
								<div class="inner-box">
									<div class="icon"><img src="~/assets/images/icons/team-group.svg" alt="" /></div>
