    <!--Trekking Section-->
    <section class="trekking-section">
        <div class="floated-icon left"><img src="~/assets/images/resource/hills-image-2.svg" alt="" title=""></div>
        <div class="floated-icon right"><img src="~/assets/images/resource/stones-right.svg" alt="" title=""></div>
